
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <style>
    body{
      background-image: url("http://cdn.wallpapersafari.com/28/14/2Cm7Iw.jpg");
      background-size: cover;
      text-align: center;
      text-transform: uppercase;
    }
    table{
      width:400px;
      vertical-align: middle;
    }
    th,td{
      text-align: center;
      line-height: 30px;
      font-size: 20px;
    }
    .new{
      margin: auto;
    }


    </style>
  </head>
  <body>
    <h2>Add a product</h2>
    <div class="new">
     <%= form_for [@retailer,@ring] do |f| %>

<p>
      <%= f.label :shape %>
    <%= f.text_field :shape %>
</p>

<p>
      <%= f.label :description %>
      <%= f.text_area :description %>
</p>
<p>
      <%= f.label :color %>
      <%= f.text_field :color %>
    </p>

<p>
      <%= f.label :carat %>
      <%= f.text_field :carat %>
</p>

<p>
      <%= f.label :clarity %>
      <%= f.text_field :clarity%>
    </p>

<p>
      <%= f.label :cut %>
    <%= f.text_field :cut%>
  </p>

<p>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </p>

<p>
      <%= f.label :img_url%>
    <%= f.text_field :img_url %>
  </p>
<p>
      <%= f.submit %>
    </p>

    <%end%>
  </table>
  </div>
  </body>
</html>
